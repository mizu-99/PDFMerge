#:import C kivy.utils.get_color_from_hex

<MyBoxLayout>:
    canvas.before:
        Color:
            rgba : C('#29506D')
        Rectangle:
            pos  : self.pos
            size : self.size

    BoxLayout:
        orientation : 'vertical'
        spacing     : 10
        padding     : 10

        TextInput:
            id               : input_folder_path 
            font_size        : '16sp'
            multiline        : False
            hint_text        : 'FOLDER PATH'
            size_hint_x      : 1
            size_hint_y      : 0.4
            on_text_validate : root.merge_pressed()

        BoxLayout:
            orientation : 'horizontal'
            size_hint_x : 1
            size_hint_y : 0.6

            BoxLayout:
                orientation : 'vertical'
                size_hint_x : 0.7

                BoxLayout:
                    orientation : 'horizontal'
                    size_hint_y : 0.5

                    CheckBox:
                        id          : check_separate_vh
                        group       : 'marge'
                        active      : True
                        size_hint_x : 0.2
                    Label:
                        id          : label_separate_vh
                        text        : '用紙の縦・横を分けて結合'
                        size_hint_x : 0.8
                        text_size   : self.size
                        halign      : 'left'
                        valign      : 'center'

                BoxLayout:
                    orientation : 'horizontal'
                    size_hint_y : 0.5

                    CheckBox:
                        id          : check_no_separate_vh
                        group       : 'marge'
                        size_hint_x : 0.2
                    Label:
                        id          : label_separate_vh
                        text        : '用紙の縦・横を分けないで結合'
                        size_hint_x : 0.8
                        text_size   : self.size
                        halign      : 'left'
                        valign      : 'center'

            Button:
                id          : button_merge
                text        : 'Merge'
                size_hint_x : 0.3
                disabled    : False
                on_release  : root.merge_pressed()
